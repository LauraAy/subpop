<% image_size ||= :small %>
<div class="thumbnail">
  <div class="thumb-container">
    <%= render '/thumbnails/show', parent: item, thumbnail: item.photo, image_size: image_size %>
  </div> <!-- /.thumb-container -->
  <div class="caption clearfix">
  <% if item.is_a? TitlePage -%>
    <% if can? :destroy, item %>
    <div class="pull-right">
      <%= link_to 'Remove title page', book_title_page_path(item.book,item), method: :delete -%>
    </div> <!-- /.pull-right -->
    <% end %> <%# /if can? :destroy %>
  <% end %> <%# /if item.is? TitlePage %>
  <% if can? :update, item %>
    <div class="pull-left">
      <%= link_to_crop_photo item, item.photo, title: 'Edit photo', class: 'btn btn-default btn-sm modal-link pull-right', remote: true, data: { toggle: 'tooltip', placement: 'right', 'modal-id': 'cropper-modal' }  -%>
    </div> <!-- /.pull-left -->
  <% end %> <%# /if can? :update, item %>
  <% if item.on_flickr? -%>
    <a target="_blank" rel="noopener noreferrer" href="<%= item.photopage_url -%>">View on Flickr <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a>
  <% end -%> <%# /if item.on_flickr? %>
  </div> <!-- /.caption -->
</div>  <!-- /.thumbnail -->