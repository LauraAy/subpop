<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Repository/Owner</th>
      <th>Call number</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.holder %></td>
        <td><%= book.call_number %></td>
        <td><%= book.name %></td>
        <td>
          <%= link_to 'Show', book, class: 'btn btn-default btn-sm' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
