<%= form_for @name, html: { class: 'form-horizontal' }  do |f| %>
  <% if @name.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@name.errors.count, "error") %>.
      </div>
      <ul>
      <% @name.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year_start, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :year_start, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year_end, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :year_end, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :viaf_id, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :viaf_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :comment, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
  </div>


  <div class="actions">
    <%= link_to 'Cancel', names_path, class: "btn btn-default" %>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
