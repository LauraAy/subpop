<h1>Listing Evidence</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Format</th>
      <th>Content type</th>
      <th>Location in book</th>
      <th>Location in book page</th>
      <th>Transcription</th>
      <th>Year when</th>
      <th>Year start</th>
      <th>Year end</th>
      <th>Date narrative</th>
      <th>Where</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evidence.each do |evidence| %>
      <tr>
        <td><%= evidence.book %></td>
        <td><%= evidence.format %></td>
        <td><%= evidence.content_type %></td>
        <td><%= evidence.location_in_book %></td>
        <td><%= evidence.location_in_book_page %></td>
        <td><%= evidence.transcription %></td>
        <td><%= evidence.year_when %></td>
        <td><%= evidence.year_start %></td>
        <td><%= evidence.year_end %></td>
        <td><%= evidence.date_narrative %></td>
        <td><%= evidence.where %></td>
        <td><%= evidence.comments %></td>
        <td><%= link_to 'Show', evidence %></td>
        <td><%= link_to 'Edit', edit_evidence_path(evidence) %></td>
        <td><%= link_to 'Destroy', evidence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evidence', new_evidence_path %>
