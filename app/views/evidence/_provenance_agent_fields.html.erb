<fieldset>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.hidden_field :name_id %>
      <% update_field = "#{f.object_name.gsub(/[\[\]\]]+/, '_')}name_id" %>
      <%# use autocomplete_field_tag because, we search the names and set the ID.  %>
      <%= autocomplete_field_tag 'name', f.object.name, autocomplete_name_name_book_evidence_index_path, class: "form-control", 'data-id-element' => "##{update_field}" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <% ProvenanceAgent::ROLES.each do |role| %>
        <div class="radio">
          <label><%= f.radio_button :role, role[1] %></label> <%= role[0] %>
        </div>

      <% end %>
    </div>
  </div>
  <%= f.label :_destroy, "Remove Question" %>
</fieldset>
