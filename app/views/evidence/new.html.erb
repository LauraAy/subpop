<h1>New Evidence</h1>

<% content_for :sidebar do -%>
  <%= render 'small_evidence_photo', evidence: @evidence %>
<% end -%>

<%= form_for [ @book, @evidence ], id: 'evidence-form', html: { class: 'form-horizontal' } do |f| %>
  <%= render 'form', f: f %>

  <div class="actions">
    <%= link_to 'Cancel', @book, class: "btn btn-default" %>
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end -%>