<h2>New <span id="evidence-format-heading"><%= @evidence.format_name -%></span></h2>

<% content_for :sidebar do -%>
  <%= render 'small_evidence_photo', book: @book, evidence: @evidence, allow_edit: true %>
  <div id="context-image">
  </div>
<% end -%>

<% content_for :modals do %>
  <%= render '/cropping/photos/cropper_modal' %>
<% end %>

<% content_for :footer, @evidence.full_name -%>

<%= form_for [ @book, @evidence ], builder: SubpopFormbuilder, id: 'evidence-form', html: { class: 'form-horizontal' } do |f| %>
  <%= render 'form', f: f %>

  <div class="actions">
    <%= link_to 'Cancel', book_path(@book, anchor: 'anchor-photo-queue'), class: "btn btn-default" %>
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end -%>